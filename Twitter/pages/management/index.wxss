/* pages/manage/index.wxss */
page {
  width: 100%;
  height: 100%;
  /*设置高度100%，达到满屏状态*/
}

.container {
  width: 100%;
  height: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .container-top {
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 100rpx;
}

.container .container-top .date {
  display: block;
  width: 300rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  text-align: center;
}

.container .container-item {
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 100rpx;
  margin-bottom: 10rpx;
  /* background-color: blue; */
}

.container .container-item .checkbox {
  width: 10%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.container .container-item .content {
  flex: 1;
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid gainsboro;
}

.container .container-item .content view {
  line-height: 100rpx;
}

.container .container-item .content image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 auto;
  margin-left: -80rpx;
}
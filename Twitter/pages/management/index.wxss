/* pages/manage/index.wxss */
page {
  width: 100%;
  height: 100%;
  box-sizing:border-box;
  padding:0 20rpx;
  /*设置高度100%，达到满屏状态*/
}

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .container-top {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
}

.container .container-top .date {
  display: block;
  width: 300rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  text-align: center;
}

.container .container-item {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  margin-bottom: 10rpx;
  /* background-color: blue; */
}

.container .container-item .checkbox {
  width: 10%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.container .container-item .content {
  flex: 1;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid gainsboro;
}

.container .container-item .content view {
  line-height: 100rpx;
  width: 150rpx;
  color: #4d4d4d;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container .container-item .content .image {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
}

.container .container-item .content image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}